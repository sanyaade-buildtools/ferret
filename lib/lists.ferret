-- merge two (sorted) lists together
merge-with: fn [f xs ys] [
  if null? xs [ys] [
    if null? ys [xs] [
      let [x: head xs y: head ys] [
        if f x y [
          x , merge-with :f tail xs ys
        ] [
          y , merge-with :f xs tail ys
        ]
      ]
    ]
  ]
]

-- merge two lists in ascending order
merge: fn [xs ys] [
  merge-with :< xs ys
]

