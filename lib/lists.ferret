-- inserts an element into a list sorted
insert-with: fn [f x xs] [
  let [s: split-when fn [i] [f x i] xs] [
    append fst s (x , snd s)
  ]
]

-- iinsert an element into a list in ascending order
insert: fn [x xs] [
  insert-with :< x xs
]

